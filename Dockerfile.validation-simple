FROM python:3.11

WORKDIR /app

# Install only essential packages for data download and validation
RUN pip install --no-cache-dir \
    v20 \
    pandas \
    numpy \
    python-dotenv \
    pyyaml \
    scipy \
    h5py \
    pydantic \
    python-dateutil \
    rich

# We'll mount the project directory, so no need to copy files

CMD ["bash"]