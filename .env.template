# SWT Environment Configuration Template
# Copy to .env and fill in your values

# ================================
# OANDA API Configuration
# ================================
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENVIRONMENT=practice  # or 'live' for production

# ================================
# Trading Configuration
# ================================
TRADING_INSTRUMENT=GBP_JPY
TRADING_MODE=simulation  # simulation, paper, live
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ================================
# Model Configuration
# ================================
CHECKPOINT_PATH=./checkpoints/swt_checkpoint_ep013475_20250904_213529_+475.pth
MODEL_DEVICE=auto  # auto, cpu, cuda, mps

# ================================
# Performance Configuration
# ================================
WST_CACHE_SIZE=1000  # Number of WST transforms to cache
FEATURE_CACHE_TTL=300  # Feature cache TTL in seconds
MAX_CONCURRENT_REQUESTS=10  # Max concurrent API requests

# ================================
# Monitoring Configuration
# ================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_STRUCTURED_LOGS=true
LOG_FORMAT=json  # json, text

# ================================
# Database Configuration (optional)
# ================================
# DATABASE_URL=sqlite:///./swt_trading.db
# REDIS_URL=redis://localhost:6379/0

# ================================
# Alert Configuration (optional)
# ================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# ================================
# Development Configuration
# ================================
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
MOCK_OANDA_API=false  # Use mock API for testing